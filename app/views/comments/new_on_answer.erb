<%= erb :'partials/_errors'%>
<h2 class="transparent inline-block">Comment.</h2>


<p><%= @answer.answer_content %> - <%=@answer.user.username %></p>

<div class="answer-comments">
    <% @answer.comments.each do |answer_comment| %>
        <p class="answer-comment"><%=answer_comment.comment_content%> - <%=answer_comment.user.username %> </p>
    <%end %>
</div>


<div>
  <form id "comment-on-answer" method="post" action="/questions/<%=@answer.question_id%>/answers/<%=@answer.id%>/comments">

<%= erb :"/partials/_new_form" %>
  </form>
</div>

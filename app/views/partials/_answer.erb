  <table class = "answer-properties">
    <tbody>
      <tr>
        <td class="votecell">
          <% if answer.best_answer %>
            <img class="inline-block" src="/images/check.png">
          <% end %>
        </td>
        <td class="votecell">
          <div class="questionvotes">
          <form action='/answers/<%= answer.id %>/vote' method='post'>
            <input type='hidden' name='up_down' value='1'>
            <input type='submit' value='Upvote'>
          </form>
          <span><%= answer.score %></span>
          <form action='/answers/<%= answer.id %>/vote' method='post'>
            <input type='hidden' name='up_down' value='-1'>
            <input type='submit' value='Downvote'>
          </form>
        </div>
        </td>
        <td class="postcell">

        <div class="inline-block">
          <%= answer.answer_content %>
        </div>

      </td>
      <% if current_user? && !@question.has_best_answer? %>
        <td class="postcell">
          <div class="inline-block">
            <button class="btn-outlined green right" onclick="location.href='/questions/<%=@question.id%>/solved/<%=answer.id%>'"> Mark as Solved</button>
          </div>
        </td>
      <% end %>
      <td class="postcell">
        <div>
          <a href="/questions/<%=@question.id %>/answers/<%= answer.id %>/comments/new">comment</a>
        </div>
      </td>
        </td>
      </tr>
    </tbody>
  </table>

  <table class = "answer-comments">
    <tbody>
      <tr>
        <td class="">

          <% answer.comments.each do |answer_comment| %>
            <p><%=answer_comment.comment_content %></p>
          <%end %>

        </td>
      </tr>
    </tbody>
  </table>
